        },
    },
    'handlers': {
        'console': {
            'class':'logging.StreamHandler',
            'level':'DEBUG',
            'formatter': 'console',
            'stream': 'sys.stdout'
        },
        'file': {
            'class': 'logging.handlers.TimedRotatingFileHandler',
            'level': 'DEBUG',
            'formatter': 'file',
            'filename': LOGGER_DIR + '/' + LOGGER_FILE,
            'when': 'D',
            'interval': 1,
            'backupCount': 30,
            'encoding': 'utf-8'
        }
    },
    'loggers': {
        LOGGER_NAME: { 
            'handlers': ['console', 'file'],
            'propagate': True 
        },
    }

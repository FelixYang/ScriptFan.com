# LOGGING CONFIG
LOGGER_NAME='scriptfan'
LOGGER_DIR='/home/greatghoul/scriptfan'
LOGGER_FILE='scriptfan.log'
LOGGER_CONFIG={
    'version': 1,              
    'disable_existing_loggers': True,
    'formatters': {
        'console': {
            'format': '[%(levelname)s] %(name) - %(message)s'
        },
        'file': {
            'format': '[%(levelname)s] %(asctime)s - %(name)s - %(module)s:%(funcName)s() - %(pathname)s:%(lineno)d - %(message)s',
